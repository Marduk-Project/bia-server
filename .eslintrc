{
  "root": true,
  "env": {
    "node": true,
    "jest": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "parser": "babel-eslint"
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/base"
  ],
  "rules": {
    "no-console": "off",
    "no-unused-vars": "off",
    "no-constant-condition": "off"
  }
}